<%= form_with model: @post, local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.label :featured_image %>
    <%= form.file_field :featured_image %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
