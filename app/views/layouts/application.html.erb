<%= yield %>
</main>
<script>
			function toggleMenu() {
				var menu = document.getElementById('nav-menu');
				if (menu.style.display === 'block') {
					menu.style.display = 'none';
				} else {
					menu.style.display = 'block';
				}
			}
			</script>
