<h1>Comments</h1>

<button class="text-white btn btn-info"> <%= link_to "New Comment", new_comment_path %> </button>

<div id="comments">
  <% @comments.each do |comment| %>
    <div class="comment-container my-3 p-3 border rounded bg-white">
      <h5 class="comment-author">
        <%= link_to comment.name, comment, class: "text-decoration-none" %>
      </h5>
      <p class="comment-body text-black">
        <%= comment.body %>
      </p>
      <small class="text-muted">
        Posted on <%= comment.created_at.strftime("%B %d, %Y at %I:%M %p") %>
      </small>
      <% if comment.updated_at > comment.created_at %>
        <small class="text-muted">
          (Edited on <%= comment.updated_at.strftime("%B %d, %Y at %I:%M %p") %>)
        </small>
      <% end %>

      <div class="d-flex mx-2">
        <%= link_to "Edit", edit_comment_path(comment), class: "btn btn-sm btn-outline-primary ms-2" %>
        <%= link_to "Back to Post", posts_path, class: "btn btn-sm btn-outline-primary ms-2" %>
        <%= button_to "Delete", comment_path(comment), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger ms-2" %>
    </div>
    </div>
  <% end %>
</div>